<div class="row">
  <div class="form-group">
    <img src="/assets/250x250.png" class="img-rounded img-responsive">
  </div>
</div>
<div class="row">
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= f.label :first_name, :class => "col-lg-5 col-md-5 col-sm-5  control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= f.text_field :first_name,required: true, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= f.label :last_name, :class => "col-lg-5 col-md-5 col-sm-5 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= f.text_field :last_name,required: true, :class => "form-control" %>
      </div>
    </div>
  </div>
</div>