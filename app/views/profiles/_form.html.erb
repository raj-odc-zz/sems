<% content_for :head do %>
  <%= stylesheet_link_tag "font-awesome.css" %>
<% end %>

<%= form_for [:api, profile], :remote=>true,:html => {:id =>'profile_type', :multipart => true, :class => "form-horizontal" } do |f| %>
  <%=f.hidden_field :user_id, value: profile.user_id %>
  <div class="container">
    <section>
      <div class="row">
        <div class="col-md-4">
          <div class="row">
            <div class="form-group">
              <img src="/assets/250x250.png" class="img-rounded img-responsive">
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :first_name, :class => "col-lg-5 col-md-5 col-sm-5  control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :first_name, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :last_name, :class => "col-lg-5 col-md-5 col-sm-5 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :last_name, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :class_list_id, :class => "col-lg-5 col-md-5 col-sm-5 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.select :class_list_id, options_from_collection_for_select([], "id", "name"),{}, :class => "form-control" %>

                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :roll_no, :class => "col-lg-5 col-md-5 col-sm-5 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :roll_no, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :phone_number, :class => "col-lg-5 col-md-5 col-sm-5 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :phone_number, :class => "form-control mobile_number" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :blood_group, :class => "col-lg-5 col-md-5 col-sm-5 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :blood_group, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="alert alert-info">
            <h2>User Bio : </h2>
            <h4>Bootstrap user profile template </h4>
          </div>

            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :guardian_email_id, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :guardian_email_id, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :father_name, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :father_name, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :mother_name, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :mother_name, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :marital_status, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-3 col-md-3 col-sm-3">
                  <%= f.select :marital_status, options_for_select([["Single","single"],["Married","married"]]),{}, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :emergency_contact_number, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :emergency_contact_number, :class => "form-control mobile_number" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :husband_name, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :husband_name, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :profile_type_id, :class => "col-lg-3 col-md-5 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.select :profile_type_id, options_from_collection_for_select([], "id", "name"),{}, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :board_id, :class => "col-lg-3 col-md-5 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.select :board_id, options_from_collection_for_select([], "id", "name"),{}, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :class_list_id, :class => "col-lg-3 col-md-5 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.select :class_list_id, options_from_collection_for_select([], "id", "name"),{}, :class => "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                  <div class="col-lg-3 col-md-5 col-sm-3 control-label" ></div>
                  <%= f.submit "Update Details", :class => "pull-center btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
<%end%>