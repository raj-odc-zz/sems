<%required = addr_type_name == "secondary" ? false : true%>
<%= f.fields_for :addresses  do |builder| %>
  <%=builder.hidden_field :address_type_id, value: AddressType.find_by_name(addr_type_name).id%>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= builder.label :address1, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= builder.text_field :address1, required: required,:class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= builder.label :address2, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= builder.text_field :address2, required: required, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= builder.label :landmark, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= builder.text_field :landmark, required: required, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= builder.label :city, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= builder.text_field :city, required: required, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= builder.label :state, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= builder.text_field :state, required: required, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
      <%= builder.label :zipcode, :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
      <div class="col-lg-7 col-md-7 col-sm-7">
        <%= builder.text_field :zipcode, required: required, :class => "form-control" %>
      </div>
    </div>
  </div>

<%end%>