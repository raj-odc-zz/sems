<%= form_for [:api, class_list], :remote=>true,:html => {:id =>'class', :multipart => true, :class => "form-horizontal" } do |f| %>

  <div class="modal-header  clearfix">
    <h4 class="modal-h3" id="myModalLabel">User</h4>
  </div>
  <div class="modal-body">
    <div class="row">
      <div class="form-group">
        <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
          <%= f.label :class_name, "Class Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
          <div class="col-lg-7 col-md-7 col-sm-7">
            <%= f.text_field :class_name, :class => "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
          <%= f.label :section, "Section", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
          <div class="col-lg-7 col-md-7 col-sm-7">
            <%= f.text_field :section, :class => "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
          <%= f.label :major, "Major", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
          <div class="col-lg-7 col-md-7 col-sm-7">
            <%= f.text_field :major, :class => "form-control" %>
          </div>
        </div>
      </div>
      <%= f.hidden_field :board_id, value: current_board.try(:id) %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary" onclick="submitForm('#class','#classList')">Save</button>
  </div>

<%end%>

