
    <%= form_for user,:remote=>true,:html => {:id =>'user', :multipart => true, :class => "form-horizontal" } do |f| %>

      <div class="modal-header  clearfix">
        <h4 class="modal-h3" id="myModalLabel">User</h4>
      </div>
      <div class="modal-body">
        <%if @profile %>
        <%= fields_for @profile do |profile_form| %>
            <%= profile_form.hidden_field :profile_type_id%>
            <%= profile_form.hidden_field :board_id%>
            <div class="row">
              <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                  <%= profile_form.label :first_name, "First Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                  <div class="col-lg-7 col-md-7 col-sm-7">
                    <%= profile_form.text_field :first_name, :class => "form-control" %>
                    <%=  %>
                  </div>
                </div>
              </div>
            </div>
                <div class="row">
                  <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                      <%= profile_form.label :last_name, "Last Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                      <div class="col-lg-7 col-md-7 col-sm-7">
                        <%= profile_form.text_field :last_name, :class => "form-control" %>
                        <%=  %>
                      </div>
                    </div>
                  </div>
                </div>
        <% end %>
        <% end %>
        <div class="row">
          <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
              <%= f.label :email, "Email", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
              <div class="col-lg-7 col-md-7 col-sm-7">
                <%= f.text_field :email, :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
              <%= f.label :username, "User Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
              <div class="col-lg-7 col-md-7 col-sm-7">
                <%= f.text_field :username, :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <%if action_name == "new"%>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :password, "Password", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.password_field :password, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :password_conformation, "Password Conformation", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.password_field :password_confirmation, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
        <%end%>
        <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :role_id, "Role", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-4 col-md-4 col-sm-4">
                  <%= f.select :role_id, options_from_collection_for_select(@roles, "id", "name"),{}, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="submitForm('#user')">Save</button>
      </div>
    <%end%>

