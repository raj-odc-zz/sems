<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for user,:remote=>true do |f| %>
      <div class="modal-header  clearfix">
        <h4 class="modal-h3" id="myModalLabel">User</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
              <%= f.label :username, "User Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
              <div class="col-lg-7 col-md-7 col-sm-7">
                <%= f.text_field :username, :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
              <%= f.label :email_id, "User Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
              <div class="col-lg-7 col-md-7 col-sm-7">
                <%= f.text_field :email_id, :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <%if action_name == "new"%>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :password, "User Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :password, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :password_conformation, "User Name", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.text_field :password_conformation, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
        <%end%>
        <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 editable-wrapper">
                <%= f.label :role_id, "Role", :class => "col-lg-3 col-md-3 col-sm-3 control-label" %>
                <div class="col-lg-7 col-md-7 col-sm-7">
                  <%= f.select :role_id, options_from_collection_for_select(@roles, "id", "name") :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <input class="button pull-right cancel col-lg-3 col-md-3 col-sm-3" data-dismiss="modal" aria-hidden="true"  type = "button" value="Cancel" />
        <input class="button pull-right col-lg-3 col-md-3 col-sm-3" style="margin-right: 2%;" type = "submit" value="Save" />
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
      </div>
    <%end%>
  </div>
</div>

