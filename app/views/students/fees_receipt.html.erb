<%#transaction = AmountTransaction.find_by_id()%>
<%if transaction && profile = Profile.find(transaction.profile_id)%>
    <%board = profile.try(:board)%>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="invoice-title">
            <h2>Invoice</h2><h3 class="pull-right">Order # 12345</h3>
          </div>
          <hr>
          <div class="row">
            <div class="col-xs-6">
              <address>
                <strong>Invoice To:</strong><br>
                <%=profile.name%>,<br>
                <%=board.try(:name)%>
              </address>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <address>
                <strong>Payment Method:</strong><br>
                Cash<br>
              </address>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><strong>summary</strong></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                    <div class="row">
                      <div class="col-lg-4 col-md-4 col-sm-4"><strong>FeesType: </strong></div>
                      <div class="col-lg-4 col-md-4 col-sm-4"><%=transaction.parent.fees_type.name%></div>
                      <div class="col-lg-4 col-md-4 col-sm-4"><strong>Paid Amount: </strong></div>
                      <div class="col-lg-4 col-md-4 col-sm-4"><%=transaction.try(:amount)%></div>

                    </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="page-break"></div>
<%end%>